DOCKER_TAG=dev
ENVIRONMENT=production

HOST={{cookiecutter.host}}
PORT={{cookiecutter.port}}
API_BASE_URL={{cookiecutter.api_base_url}}
SECRET_KEY={{cookiecutter.secret_key}}
JWT_SECRET_KEY="update-data-with-keygen"
TOKEN_API_KEY="update-data-with-keygen"

BACKEND_CORS_ORIGINS={{cookiecutter.backend_cors_origins}}

{%- if cookiecutter.use_db == "yes" %}
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=postgres
DB_PORT=5432
DB_NAME={{cookiecutter.project_name}}
DB_EXTERNAL_PORT=5432
{%- endif %}

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=/backend/logs
LOG_FILE={{cookiecutter.project_name}}.log
LOG_MAX_MB=500MB
LOG_BACKUP_COUNT=5

# Error Tracking (Sentry only production) 
SENTRY_DSN=https://sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1