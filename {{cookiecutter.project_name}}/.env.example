# Environment Configuration
# Copy this file to .env and adjust values as needed

# Uncomment and configure for production deployment
DOCKER_TAG=dev   

# Application Settings
ENVIRONMENT=development # or production
SECRET_KEY=dev-secret-key-change-in-production  # para generar: openssl rand -hex 32

# Security Configuration
JWT_SECRET_KEY=dev-jwt-secret-key # para generar use keygen.py y luego elimine archivo.
TOKEN_API_KEY=dev-secret-api-key-change-in-production

# Server Configuration
API_BASE_URL=url_to_production
HOST=0.0.0.0
PORT=5000
# Uncomment and configure for production deployment
# WORKERS=4
# WORKER_CLASS=gevent
# WORKER_CONNECTIONS=1000
# MAX_REQUESTS=1000
# MAX_REQUESTS_JITTER=100
# TIMEOUT=30
# KEEPALIVE=2

# Database Configuration (Development - Local PostgreSQL)
DB_HOST=db_dev
DB_PORT=5432
DB_NAME=pesca_dev
DB_USER=pesca_user
DB_PASSWORD=pesca_password
DB_EXTERNAL_PORT=5432

# Database Configuration (Production - AWS RDS)
# Uncomment and configure for production deployment
# DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
# DB_PORT=5432
# DB_NAME=pesca_prod
# DB_USER=pesca_prod_user
# DB_PASSWORD=your-secure-rds-password

# Logging Configuration
LOG_LEVEL=DEBUG                 # INFO in production
LOG_DIR=/backend/logs
LOG_FILE=app_name.log
LOG_MAX_MB=500MB
LOG_BACKUP_COUNT=5

# Error Tracking (Sentry only production) 
SENTRY_DSN=https://sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
